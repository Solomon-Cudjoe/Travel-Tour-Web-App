    <h1>Manage Content</h1>
    <h2>Countries:</h2>
    <ul>
        <% data.countries.forEach(function(country) { %>
            <li>
                <strong>Name:</strong> <%= country.name %><br>
                <strong>Population:</strong> <%= country.population %><br>
                <strong>Continent:</strong> <%= country.continent %>
                <form action="/deleteCountry" method="post">
                    <input type="hidden" name="countryId" value="<%= country.id %>">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <h2>Deals:</h2>
    <ul>
        <% data.deals.forEach(function(deal) { %>
            <li>
                <strong>City Name:</strong> <%= deal.cityName %><br>
                <strong>Type:</strong> <%= deal.type %><br>
                <strong>Duration:</strong> <%= deal.duration %>
                <form action="/deleteDeal" method="post">
                    <input type="hidden" name="dealId" value="<%= deal.id %>">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>

<%- include('footer'); -%>