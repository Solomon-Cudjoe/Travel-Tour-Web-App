    </div>
    <div class="content">
        <h1>Manage Content</h1>
        <h2>Countries:</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col"scope="col">Population</th>
                    <th scope="col"scope="col">Continent</th>
                    <th scope="col"scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% data.countries.forEach(function(country) { %>
                    <tr>
                        <td><%= country.name %></td>
                        <td><%= country.population %> Mil</td>
                        <td><%= country.continent %></td>
                        <td>
                            <form action="/deleteCountry" method="post">
                                <input type="hidden" name="countryId" value="<%= country.id %>">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
            
        </table>

        <h2>Deals:</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">City Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% data.deals.forEach(function(deal) { %>
                    <tr>
                        <td> <%= deal.cityName %></td>
                        <td><%= deal.type %></td>
                        <td><%= deal.duration %></td>
                        <td>
                            <form action="/deleteDeal" method="post">
                                <input type="hidden" name="dealId" value="<%= deal.id %>">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    

    <script>
        var  country = document.querySelector('.country');
        var  city = document.querySelector('.city');
        var addCountry = document.querySelector('.addCountry');
        var addCity = document.querySelector('.addCity');
        var deal = document.querySelector('.deal')
        var addDeal = document.querySelector('.addDeal')

        addCountry.addEventListener('click', function(e) {
            country.classList.toggle('hide');
            city.classList.add('hide');
            deal.classList.add('hide');
        })

        addCity.addEventListener('click', function(e) {
            city.classList.toggle('hide');
            country.classList.add('hide');
            deal.classList.add('hide');
        })

        addDeal.addEventListener('click', function(e) {
            console.log("Deals button clicked")
            deal.classList.toggle('hide');
            country.classList.add('hide');
            city.classList.add('hide');
        })
    </script>

