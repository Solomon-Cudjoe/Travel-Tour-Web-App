<%- include('header'); -%>

<div class="reservation-form">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <form id="reservation-form" method="post" action="/register">
          <div class="row">
            <div class="col-lg-12">
              <h4>Register</h4>
            </div>
            <div class="col-md-12">
              <fieldset>
                <label for="Name" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  class="username"
                  placeholder="username"
                  autocomplete="on"
                  required
                />
              </fieldset>
            </div>

            <div class="col-md-12">
              <fieldset>
                <label for="Name" class="form-label">Your Email</label>
                <input
                  type="email"
                  name="email"
                  class="email"
                  placeholder="email"
                  autocomplete="on"
                  required
                />
              </fieldset>
            </div>

            <div class="col-md-12">
              <fieldset>
                <label for="Name" class="form-label">Your Password</label>
                <input
                  type="password"
                  name="password"
                  class="password"
                  placeholder="password"
                  maxlength="12"
                  minlength="8"
                  autocomplete="on"
                  required
                />
              </fieldset>
            </div>
            <div class="col-lg-12">
              <fieldset>
                <button type="submit" class="main-button">register</button>
              </fieldset>
            </div>
          </div>
        </form>

        <h3>Or</h3>
        <a href="/auth/google" class="google-link"> Sign in with Google</a>
      </div>
    </div>
  </div>
</div>

<%- include('footer'); -%>
